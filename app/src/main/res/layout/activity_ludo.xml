<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_ludo_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <LinearLayout
        android:id="@+id/layout_strategy_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#88000000"
        android:padding="6dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/layout_ludo_p1"
        app:layout_constraintEnd_toStartOf="@id/layout_ludo_p2">
        <ProgressBar android:id="@+id/progress_p1" style="?android:attr/progressBarStyleHorizontal" android:layout_width="match_parent" android:layout_height="4dp" android:progressTint="#FF0000" android:max="100"/>
        <ProgressBar android:id="@+id/progress_p2" style="?android:attr/progressBarStyleHorizontal" android:layout_width="match_parent" android:layout_height="4dp" android:progressTint="#00FF00" android:max="100"/>
        <ProgressBar android:id="@+id/progress_p3" style="?android:attr/progressBarStyleHorizontal" android:layout_width="match_parent" android:layout_height="4dp" android:progressTint="#0000FF" android:max="100" android:visibility="gone"/>
        <ProgressBar android:id="@+id/progress_p4" style="?android:attr/progressBarStyleHorizontal" android:layout_width="match_parent" android:layout_height="4dp" android:progressTint="#FFFF00" android:max="100" android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_ludo_p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView android:id="@+id/dice_p1" android:layout_width="55dp" android:layout_height="55dp" android:src="@drawable/dice_1"/>
        <TextView android:text="P1" android:textColor="#FF0000" android:textStyle="bold" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_ludo_p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView android:id="@+id/dice_p2" android:layout_width="55dp" android:layout_height="55dp" android:src="@drawable/dice_1"/>
        <TextView android:text="P2" android:textColor="#00FF00" android:textStyle="bold" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_ludo_p4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView android:text="P4" android:textColor="#FFFF00" android:textStyle="bold" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <ImageView android:id="@+id/dice_p4" android:layout_width="55dp" android:layout_height="55dp" android:src="@drawable/dice_1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_ludo_p3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView android:text="P3" android:textColor="#0000FF" android:textStyle="bold" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <ImageView android:id="@+id/dice_p3" android:layout_width="55dp" android:layout_height="55dp" android:src="@drawable/dice_1"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_ludo_board"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <LinearLayout
        android:id="@+id/layout_dashboard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="16dp"
        android:weightSum="2"
        app:layout_constraintBottom_toTopOf="@id/img_ludo_board"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="#A61A1A1A"
            android:orientation="vertical"
            android:paddingHorizontal="12dp"
            android:gravity="center_vertical"
            android:layout_marginEnd="8dp">
            <TextView android:text="MATCH STATS" android:textColor="#FFF" android:textStyle="bold" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="4dp"/>
            <TextView android:id="@+id/text_dash_p1" android:text="P1 âš”ï¸0 ðŸ’€0 ðŸŽ²0" android:textColor="#FF0000" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/text_dash_p2" android:text="P2 âš”ï¸0 ðŸ’€0 ðŸŽ²0" android:textColor="#00FF00" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/text_dash_p3" android:text="P3 âš”ï¸0 ðŸ’€0 ðŸŽ²0" android:textColor="#0000FF" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:visibility="gone"/>
            <TextView android:id="@+id/text_dash_p4" android:text="P4 âš”ï¸0 ðŸ’€0 ðŸŽ²0" android:textColor="#FFFF00" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="#A61A1A1A"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="8dp">
            <TextView android:text="SAFE ZONE SHIFT IN" android:textColor="#DDFFFFFF" android:textSize="10sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="4dp"/>
            <TextView android:id="@+id/text_dash_timer" android:text="00:30" android:textColor="#FFF" android:textSize="32sp" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/anim_ludo_neon_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:lottie_rawRes="@raw/anim_neon_glow"
        app:lottie_loop="true"
        app:lottie_autoPlay="false"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="@id/img_ludo_board"
        app:layout_constraintBottom_toBottomOf="@id/img_ludo_board"
        app:layout_constraintStart_toStartOf="@id/img_ludo_board"
        app:layout_constraintEnd_toEndOf="@id/img_ludo_board" />

    <FrameLayout
        android:id="@+id/overlay_ludo_stars"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="9dp"
        app:layout_constraintTop_toTopOf="@id/img_ludo_board"
        app:layout_constraintBottom_toBottomOf="@id/img_ludo_board"
        app:layout_constraintStart_toStartOf="@id/img_ludo_board"
        app:layout_constraintEnd_toEndOf="@id/img_ludo_board" />

    <FrameLayout
        android:id="@+id/overlay_ludo_tokens"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="@id/img_ludo_board"
        app:layout_constraintBottom_toBottomOf="@id/img_ludo_board"
        app:layout_constraintStart_toStartOf="@id/img_ludo_board"
        app:layout_constraintEnd_toEndOf="@id/img_ludo_board" />

    <TextView
        android:id="@+id/text_ludo_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:background="#AA000000"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/text_ludo_victory_pop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WINNER!"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold"
        android:background="#AA000000"
        android:padding="20dp"
        android:visibility="gone"
        android:elevation="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/layout_ludo_setup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F21A1A1A"
        android:gravity="center"
        android:orientation="vertical"
        android:elevation="200dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/text_setup_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LUDO MATCH"
            android:textColor="#FFF"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginBottom="50dp"/>

        <LinearLayout
            android:id="@+id/group_setup_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">
            <Button android:id="@+id/btn_theme_classic" android:layout_width="260dp" android:layout_height="65dp" android:layout_marginBottom="20dp" android:background="@drawable/bg_capsule_dark" android:text="CLASSIC BOARD" android:textColor="#FFF" app:backgroundTint="@null" />
            <Button android:id="@+id/btn_theme_wood" android:layout_width="260dp" android:layout_height="65dp" android:layout_marginBottom="20dp" android:background="@drawable/bg_capsule_dark" android:text="WOODEN BOARD" android:textColor="#FFF" app:backgroundTint="@null" />
            <Button android:id="@+id/btn_theme_neon" android:layout_width="260dp" android:layout_height="65dp" android:background="@drawable/bg_capsule_dark" android:text="NEON BOARD" android:textColor="#FFF" app:backgroundTint="@null" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/group_setup_players"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <Button android:id="@+id/btn_ludo_2p" android:layout_width="260dp" android:layout_height="65dp" android:layout_marginBottom="20dp" android:background="@drawable/bg_capsule_dark" android:text="2 PLAYERS" android:textColor="#FFF" app:backgroundTint="@null" />
            <Button android:id="@+id/btn_ludo_3p" android:layout_width="260dp" android:layout_height="65dp" android:layout_marginBottom="20dp" android:background="@drawable/bg_capsule_dark" android:text="3 PLAYERS" android:textColor="#FFF" app:backgroundTint="@null" />
            <Button android:id="@+id/btn_ludo_4p" android:layout_width="260dp" android:layout_height="65dp" android:background="@drawable/bg_capsule_dark" android:text="4 PLAYERS" android:textColor="#FFF" app:backgroundTint="@null" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/group_setup_tokens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">
            <Button android:id="@+id/btn_tokens_1" android:layout_width="260dp" android:layout_height="65dp" android:layout_marginBottom="20dp" android:background="@drawable/bg_capsule_dark" android:text="1 TOKEN (QUICK)" android:textColor="#FFF" app:backgroundTint="@null" />
            <Button android:id="@+id/btn_tokens_2" android:layout_width="260dp" android:layout_height="65dp" android:layout_marginBottom="20dp" android:background="@drawable/bg_capsule_dark" android:text="2 TOKENS" android:textColor="#FFF" app:backgroundTint="@null" />
            <Button android:id="@+id/btn_tokens_4" android:layout_width="260dp" android:layout_height="65dp" android:background="@drawable/bg_capsule_dark" android:text="4 TOKENS (FULL)" android:textColor="#FFF" app:backgroundTint="@null" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>